{
  "name": "@adonisjs/vite",
  "description": "Vite plugin for Adonis.js",
  "version": "1.0.0",
  "engines": {
    "node": ">=18.16.0"
  },
  "main": "build/index.js",
  "type": "module",
  "files": [
    "build/configure.js",
    "build/configure.d.ts",
    "build/index.js",
    "build/index.d.ts",
    "build/stubs",
    "build/src",
    "build/services",
    "build/providers"
  ],
  "exports": {
    ".": "./build/index.js",
    "./services/main": "./build/services/vite.js",
    "./vite_provider": "./build/providers/vite_provider.js",
    "./client": "./build/src/client/main.js",
    "./plugins/edge": "./build/backend/plugins/edge.js",
    "./types": "./build/src/backend/types.js"
  },
  "scripts": {
    "clean": "del-cli build",
    "copy:templates": "copyfiles \"stubs/**/*.stub\" build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "quick:test": "node --enable-source-maps --loader=ts-node/esm bin/test.ts",
    "pretest": "npm run lint",
    "test": "c8 npm run quick:test",
    "compile": "npm run lint && npm run clean && tsc && npm run copy:templates",
    "build": "npm run compile",
    "postbuild": "npm run copy:templates",
    "release": "np",
    "version": "npm run build",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^6.1.3-25",
    "@adonisjs/core": "^6.1.5-28",
    "@adonisjs/eslint-config": "^1.1.8",
    "@adonisjs/prettier-config": "^1.1.8",
    "@adonisjs/shield": "^8.0.0-8",
    "@adonisjs/tsconfig": "^1.1.8",
    "@commitlint/cli": "^17.8.0",
    "@commitlint/config-conventional": "^17.8.0",
    "@japa/assert": "^2.0.0",
    "@japa/expect-type": "^2.0.0",
    "@japa/file-system": "^2.0.0",
    "@japa/runner": "^3.0.2",
    "@swc/core": "1.3.82",
    "@types/node": "^20.8.6",
    "c8": "^8.0.0",
    "copyfiles": "^2.4.1",
    "del-cli": "^5.1.0",
    "edge.js": "^6.0.0-8",
    "eslint": "^8.51.0",
    "husky": "^8.0.3",
    "np": "^8.0.4",
    "prettier": "^3.0.3",
    "rollup": "^4.1.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vite": "^4.4.11"
  },
  "dependencies": {
    "defu": "^6.1.2",
    "edge-error": "^4.0.0-0",
    "vite-plugin-restart": "^0.3.1"
  },
  "peerDependencies": {
    "@adonisjs/core": "^6.1.5-28",
    "@adonisjs/shield": "^8.0.0-8",
    "edge.js": "^6.0.0-8",
    "vite": "^4.4.11"
  },
  "peerDependenciesMeta": {
    "vite": {
      "optional": true
    },
    "edge.js": {
      "optional": true
    },
    "@adonisjs/shield": {
      "optional": true
    }
  },
  "author": "Julien Ripouteau <julien@ripouteau.com>",
  "license": "MIT",
  "homepage": "https://github.com/adonisjs/vite#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adonisjs/vite.git"
  },
  "bugs": {
    "url": "https://github.com/adonisjs/vite/issues"
  },
  "keywords": [
    "vite",
    "adonisjs"
  ],
  "contributors": [
    "virk",
    "adonisjs"
  ],
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/package"
  },
  "prettier": "@adonisjs/prettier-config",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "np": {
    "message": "chore(release): %s",
    "tag": "latest",
    "branch": "main",
    "anyBranch": false
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**",
      "tests_helpers/**"
    ]
  },
  "directories": {
    "test": "tests"
  }
}
